<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>

        <shape
            android:shape="oval"
            android:innerRadius="25dp">
            <size android:width="50dp" android:height="50dp"/>
            <solid android:color="@color/colorPurple"/>
        </shape>
    </item>


    <item>
        <rotate
            android:pivotX="50%" android:pivotY="50%" android:fromDegrees="0"
            android:toDegrees="1440" >

            <shape android:shape="ring" android:innerRadiusRatio="3"
                android:thicknessRatio="20" android:useLevel="false">

                <size android:width="40dp" android:height="40dp" />

                <gradient android:type="sweep" android:useLevel="false"
                    android:startColor="@color/colorWhite" android:centerColor="@color/colorWhiteText"
                    android:centerY="0.50" android:endColor="@color/colorGray" />

            </shape>


        </rotate>
    </item>


</layer-list>
