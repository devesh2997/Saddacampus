<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="130dp"
    android:layout_marginStart="10dp"
    android:elevation="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/found_restaurant_item_is_veg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/veg_icon" />

            <TextView
                android:id="@+id/found_restaurant_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textColorPrimary" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/found_restaurant_item_category"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/found_restaurant_item_price"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/found_restaurant_item_category"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/found_restaurant_item_rating"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/found_restaurant_item_category"
                android:src="@drawable/star_0" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

