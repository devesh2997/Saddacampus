<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_container">

        <include layout="@layout/toolbar_searched_category" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Item Name"
            android:textColor="#000"
            android:textSize="32sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/restaurant_name"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:text="Restaurant Name"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/isVegText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Vegetarian" />

        <ImageView
            android:layout_width="16dp"
            android:id="@+id/isvegimage"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/veg_icon" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Base Price"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/price"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:text="Rs. 250"
            android:textColor="#000"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/restaurant_list_separator_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorGrayLightText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="Quantity"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorGrayLightText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="2"
            android:background="@drawable/round_button"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/no_of_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="2"
            android:background="@drawable/round_button"
            android:text="+"
            android:textAlignment="gravity"
            android:textColor="#FFF"
            android:textSize="16sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorGrayLightText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Total Price"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:text="Rs. 250"
            android:textColor="#000"
            android:textSize="16sp" />
    </RelativeLayout>


    <Button
        android:id="@+id/add"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:text="Add to basket"
        android:textAlignment="gravity"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/isOtherRes"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="\u2022 You can only saddaOrder food to a single Restaurant at a Time."
        android:textColor="#FF0000"
        android:textSize="16sp"/>

    <Button
        android:layout_width="200dp"
        android:id="@+id/moveButton"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:text="Move to this Restaurant"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:background="@drawable/round_button"/>


</LinearLayout>
