<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_rated_recommendation_item_is_veg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/veg_icon" />

            <TextView
                android:id="@+id/top_rated_recommendation_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textColorPrimary" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/top_rated_recommendation_item_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/top_rated_recommendation_item_price"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/top_rated_recommendation_item_restaurant_name"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/top_rated_recommendation_item_rating"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/top_rated_recommendation_item_restaurant_name"
                android:src="@drawable/star_0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp">

            <ViewSwitcher
                android:id="@+id/top_rated_item_add_to_cart_switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/top_rated_recommendation_item_add"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/colorPurpleLight">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Add"
                        android:textColor="#fff" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/top_rated_item_quantity_container"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/rectangle_border"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/top_rated_recommendation_item_decrease_quantity"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/top_rated_recommendation_item_quantity"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/colorPurpleLight"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/top_rated_recommendation_item_increase_quantity"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:text="+"
                        android:textColor="@color/colorPurpleLight"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </ViewSwitcher>
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

