<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reviewer_dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            app:civ_border_color="#000"
            app:civ_border_width="2dp"
            android:src="@drawable/user"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/reviewer_dp">
            <TextView
                android:id="@+id/reviewer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Devesh Anand"
                android:textSize="14sp"
                android:textColor="@color/text_black_87"/>

            <TextView
                android:id="@+id/review_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reviewer_name"
                android:textSize="12sp"
                android:text="2017-10-02 14:43:48"/>
            <TextView
                android:id="@+id/review_text"
                android:layout_below="@+id/review_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="A great overall experience. Enjoyed having a meal here a lot. Hope they continue to provide excellent service."
                android:textSize="14sp"
                android:textColor="@color/text_black_87"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>